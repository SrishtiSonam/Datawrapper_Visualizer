# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/school_journal
# For SQLite alternative: DATABASE_URL=sqlite:///./school_journal.db

# Security
SECRET_KEY=your_super_secret_key_here_at_least_32_characters_long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
UPLOAD_DIRECTORY=./uploads
MAX_UPLOAD_SIZE_MB=5

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=True
RELOAD=True

# Email Configuration (for future notification features)
# SMTP_SERVER=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your_username
# SMTP_PASSWORD=your_password
# SMTP_FROM_EMAIL=noreply@schooljournal.com

# Optional Feature Flags
ENABLE_GRAPHQL=True
ENABLE_FILE_UPLOADS=True